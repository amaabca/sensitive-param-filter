{
  "extends": ["config:base"],
  "vulnerabilityAlerts": {
    "groupName": "Security Vulnerabilities"
  },
  "packageRules": [
    {
      "groupName": "NodeJS Version",
      "major": {
        "enabled": false
      },
      "matchPackageNames": ["node"]
    },
    {
      "enabled": true,
      "groupName": "All Dependencies",
      "matchPackagePatterns": ["*"],
      "separateMajorMinor": false
    }
  ]
}
